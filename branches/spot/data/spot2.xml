<state>
	<reproductor />
	<style file="css"/>
	<layer>
		<div border_color="#828282"	border_width="1">
			<div border_color="#FFF" border_width="1">
				<div id="header">
					<move content="Instictiv"/>
					<move content="Good News for People Who Love Band News &gt; Now Playing" margin="[0,20,0,0]" />
				</div>
				<div margin="[0,40,0,50]">
					<div id="Menu" horizontal_alignment="left">
						<togglebutton func="" margin="[0,20,0,0]" background_image="search" />
						<togglebutton func="" margin="[0,90,0,0]" background_image="folder-sound" />
						<togglebutton func="" margin="[0,160,0,0]" background_image="shuffle" />
						<togglebutton func="" margin="[0,230,0,0]" background_image="repeat" />
					</div>
					<div id="main"/>
				</div>
				<div id="bottom">
					<button func="" id="rw" />
					<button func="core.core.get_app().find('#reproductor').play_pause()" id="play" />
					<button func="" id="fw" />
					<div id="slid">
						<slider id="slider" onup="core.core.get_app().find('#reproductor').slidermove()" />
					</div>
					<button func="core.core.get_app().find('#reproductor').recargar()"
					content="Recargar Biblioteca" height="50" width="150" vertical_alignment="bottom" horizontal_alignment="right" />
					<size content="*" height="20" width="100" vertical_alignment="bottom" horizontal_alignment="right" margin="[150,0,0,0]" />
				</div>
			</div>	
			<button id="close" func="core.core.stop()"/>
		</div>
	</layer>
</state>