<state>
	<reproductor />
	<style file="css" />
	<layer add_child="append">
		<div add_child="add_child" parent="true" border_color="#828282"	border_width="1">
			<div add_child="add_child" parent="true" border_color="#FFF" border_width="1">
				<div add_child="add_child" parent="true" vertical_alignment="top" height="40" background_image="top">
					<move add_child="add_child" parent="true" content="Instictiv" height="20" vertical_alignment="top" font="DroidSerif-Regular" />
					<move add_child="add_child" parent="true" content="Good News for People Who Love Band News &gt; Now Playing"
						height="20" vertical_alignment="top" margin="[0,20,0,0]" font="DroidSerif-Regular" />
				</div>
				<div add_child="add_child" parent="true" margin="[0,40,0,50]">
					<div add_child="add_child" parent="true" id="Menu" color_content="#FFF" background_image="menu"
						width="80" horizontal_alignment="left">
						<togglebutton add_child="add_child" parent="true" func="" height="70"
							vertical_alignment="top" margin="[0,20,0,0]" background_image="search" />
						<togglebutton add_child="add_child" parent="true" func="" height="70"
								vertical_alignment="top" margin="[0,90,0,0]" background_image="folder-sound" />
							<togglebutton add_child="add_child" parent="true" func=""
								height="70" vertical_alignment="top" margin="[0,160,0,0]" background_image="shuffle" />
							<togglebutton add_child="add_child" parent="true" func="" />
					</div>
					<div add_child="add_child" parent="true" id="main" margin="[80,0,0,0]" background_color="#3a3a3a"/>
				</div>
				<div add_child="add_child" parent="true" id="bottom" background_image="bottom" height="50" vertical_alignment="bottom">
					<button add_child="add_child" parent="true" func=""
						background_image="rw" height="50" width="50" vertical_alignment="bottom" horizontal_alignment="left" />
					
					<button add_child="add_child" parent="true" func="core.core.get_app().find('#reproductor').play_pause()"
						id="play" height="50" width="50" vertical_alignment="bottom" horizontal_alignment="left"
						margin="[50,0,0,0]" bold="1" background_image="play" />
						
					<button add_child="add_child" parent="true" func="" background_image="fw" height="50" width="50"
						vertical_alignment="bottom" horizontal_alignment="left" margin="[100,0,0,0]" />
					<div add_child="add_child" parent="true" height="50" width="50" margin="[150,15,150,15]" background_image="slid">
						<slider add_child="add_child" parent="true" 
							direction="horizontal" id="slider" onup="core.core.get_app().find('#reproductor').slidermove()"
							width="50" horizontal_alignment="left" background_image="slider" />
					</div>
					<button add_child="add_child" parent="true" func="core.core.get_app().find('#reproductor').recargar()"
					content="Recargar Biblioteca" height="50" width="150" vertical_alignment="bottom" horizontal_alignment="right" />
					<fps add_child="add_child" parent="true" content="*" height="20" width="100"
						vertical_alignment="bottom" horizontal_alignment="right" margin="[150,0,0,0]" />
				</div>
			</div>	
			<button add_child="add_child" parent="true" func="core.core.stop()" background_image="close"
				height="20" width="20" vertical_alignment="top" horizontal_alignment="right" margin="[0,5,5,0]" />
		</div>
	</layer>
</state>
